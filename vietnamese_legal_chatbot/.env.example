# Vietnamese Legal AI Chatbot - Environment Configuration
# Cấu hình Môi trường cho Chatbot AI Pháp lý Việt Nam

# =============================================================================
# API Keys - Khóa API
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# Pinecone Vector Database Configuration - Cấu hình Database Vector Pinecone  
# =============================================================================
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=vietnamese-legal-docs
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine
PINECONE_BATCH_SIZE=100

# =============================================================================
# Application Configuration - Cấu hình Ứng dụng
# =============================================================================
APP_NAME=Vietnamese Legal AI Chatbot
APP_VERSION=2.0.0
APP_DESCRIPTION=Hệ thống Tư vấn Pháp lý AI cho Việt Nam
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Vietnamese Government Compliance
GOVERNMENT_MINISTRY=Bộ Tư pháp
GOVERNMENT_DEPARTMENT=Cục Pháp chế
COMPLIANCE_STANDARD=Thông tư 20/2018/TT-BTTTT
NATIONAL_IDENTITY=Cộng hòa Xã hội Chủ nghĩa Việt Nam

# =============================================================================
# Server Configuration - Cấu hình Server
# =============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501
NGINX_PORT=80

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501,https://legal-ai.gov.vn
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# =============================================================================
# AI/ML Configuration - Cấu hình AI/ML
# =============================================================================
VECTOR_DB_TYPE=pinecone
EMBEDDING_MODEL=text-embedding-ada-002
CHAT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.3
TOP_P=0.9

# Vietnamese Text Processing
VIETNAMESE_NLP_ENABLED=True
LEGAL_TERM_EXTRACTION=True
ENTITY_RECOGNITION=True
LANGUAGE_DETECTION_THRESHOLD=0.8

# =============================================================================
# Vietnamese Legal Domain Configuration - Cấu hình Lĩnh vực Pháp lý VN
# =============================================================================
DEFAULT_LANGUAGE=vietnamese
DEFAULT_REGION=south

# Legal Domains (Vietnamese)
LEGAL_DOMAINS=hien_phap,dan_su,hinh_su,lao_dong,thuong_mai,hanh_chinh,thue,gia_dinh,bat_dong_san,moi_truong

# Regional Specializations
VIETNAMESE_REGIONS=north,central,south,special_zones
REGION_SPECIALTIES_ENABLED=True

# Legal Document Hierarchy
DOCUMENT_HIERARCHY=hien_phap,luat,nghi_quyet_qh,phap_lenh,nghi_dinh,quyet_dinh_ttg,thong_tu,quyet_dinh_bo

# =============================================================================
# Security Configuration - Cấu hình Bảo mật
# =============================================================================
SECRET_KEY=your_secret_key_here_32_characters_minimum
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_TIMEOUT_MINUTES=60

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=True
REQUIRE_NUMBERS=True
REQUIRE_UPPERCASE=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# File Upload Configuration - Cấu hình Tải file
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt,doc
UPLOAD_DIRECTORY=./data/uploads
TEMP_DIRECTORY=./data/temp

# Document Processing
EXTRACT_TEXT_PREVIEW_LENGTH=200
LEGAL_DOCUMENT_ANALYSIS=True
VIETNAMESE_OCR_ENABLED=True

# =============================================================================
# Database Configuration - Cấu hình Database
# =============================================================================
# PostgreSQL for chat history and user management
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vietnamese_legal_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_TTL_SECONDS=3600

# =============================================================================
# Performance Configuration - Cấu hình Hiệu suất
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
RESPONSE_TIMEOUT_SECONDS=30
CHAT_HISTORY_LIMIT=50
SEARCH_RESULTS_LIMIT=20

# Caching
ENABLE_RESPONSE_CACHE=True
CACHE_TTL_SECONDS=300
LEGAL_DOCUMENT_CACHE_TTL=3600

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
DOCUMENT_PROCESSING_TIMEOUT=300

# =============================================================================
# Logging Configuration - Cấu hình Ghi log
# =============================================================================
LOG_FILE_PATH=./logs/vietnamese_legal_ai.log
LOG_FORMAT=[%(asctime)s] %(levelname)s in %(module)s: %(message)s
LOG_ROTATION=1 week
LOG_RETENTION=30 days
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Audit Logging
AUDIT_LOG_ENABLED=True
AUDIT_LOG_PATH=./logs/audit.log
LEGAL_QUERY_LOGGING=True
USER_ACTION_LOGGING=True

# =============================================================================
# Monitoring & Analytics - Giám sát & Phân tích
# =============================================================================
PROMETHEUS_ENABLED=False
GRAFANA_ENABLED=False
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION=True

# Usage Analytics
TRACK_USER_QUERIES=True
TRACK_RESPONSE_QUALITY=True
TRACK_PERFORMANCE_METRICS=True

# =============================================================================
# Vietnamese Localization - Bản địa hóa Việt Nam
# =============================================================================
TIMEZONE=Asia/Ho_Chi_Minh
DATE_FORMAT=%d/%m/%Y
TIME_FORMAT=%H:%M:%S
CURRENCY=VND

# Vietnamese Cultural Settings
GOVERNMENT_COLORS_ENABLED=True
TRADITIONAL_LAYOUT=True
FORMAL_LANGUAGE_MODE=True

# Regional Legal Variations
NORTHERN_VIETNAM_LAWS=True
CENTRAL_VIETNAM_LAWS=True
SOUTHERN_VIETNAM_LAWS=True
SPECIAL_ECONOMIC_ZONES=True

# =============================================================================
# Development & Testing - Phát triển & Kiểm thử
# =============================================================================
MOCK_AI_RESPONSES=False
ENABLE_DEBUG_TOOLBAR=True
SHOW_SQL_QUERIES=False
ENABLE_PROFILING=False

# Testing
PYTEST_TIMEOUT=300
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vietnamese_legal_test_db
TEST_REDIS_URL=redis://localhost:6379/15

# =============================================================================
# Production Settings - Cài đặt Sản xuất
# =============================================================================
# Set these for production deployment
DOMAIN_NAME=legal-ai.gov.vn
SSL_ENABLED=True
SSL_CERT_PATH=/etc/ssl/certs/legal-ai.crt
SSL_KEY_PATH=/etc/ssl/private/legal-ai.key

# CDN Configuration
CDN_ENABLED=False
CDN_URL=https://cdn.legal-ai.gov.vn
STATIC_FILES_CDN=True

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_PATH=./backups
