# Vietnamese Legal AI Chatbot - Simple Environment Configuration
# Cấu hình môi trường đơn giản cho Chatbot AI Pháp lý Việt Nam

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here

# Basic Configuration
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=vietnamese-legal-docs
PINECONE_DIMENSION=1536

# Application Settings
APP_NAME=Vietnamese Legal AI Chatbot
APP_VERSION=2.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# AI Model Configuration
CHAT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4000
TEMPERATURE=0.3

# Vietnamese Legal Configuration
DEFAULT_LEGAL_DOMAIN=dan_su
DEFAULT_REGION=south
