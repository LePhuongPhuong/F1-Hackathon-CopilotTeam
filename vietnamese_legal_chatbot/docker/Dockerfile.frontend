# Streamlit Frontend Dockerfile for Vietnamese Legal AI Chatbot  
# Dockerfile cho Frontend Streamlit của Chatbot AI Pháp lý Việt Nam

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    STREAMLIT_SERVER_HEADLESS=true \
    STREAMLIT_BROWSER_GATHER_USAGE_STATS=false \
    STREAMLIT_SERVER_ENABLE_CORS=true

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Essential build tools
    build-essential \
    gcc \
    g++ \
    # Git for package installations
    git \
    # Curl for health checks
    curl \
    # Vietnamese font support
    fonts-liberation \
    fonts-dejavu-core \
    fontconfig \
    # Image processing libraries
    libpng-dev \
    libjpeg-dev \
    # Clean up
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Upgrade pip and install build tools
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create necessary directories
RUN mkdir -p /app/logs /app/uploads /app/temp /app/static

# Copy application code
COPY app/ ./app/
COPY scripts/ ./scripts/

# Copy Streamlit configuration
COPY docker/streamlit/config.toml /root/.streamlit/config.toml

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash vietnamese_legal \
    && chown -R vietnamese_legal:vietnamese_legal /app \
    && mkdir -p /home/vietnamese_legal/.streamlit \
    && cp /root/.streamlit/config.toml /home/vietnamese_legal/.streamlit/ \
    && chown -R vietnamese_legal:vietnamese_legal /home/vietnamese_legal/.streamlit

# Switch to non-root user
USER vietnamese_legal

# Create additional directories with proper permissions
RUN mkdir -p /app/logs /app/uploads /app/temp /app/static/css /app/static/js

# Expose port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Default command
CMD ["python", "-m", "streamlit", "run", "app/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0"]
