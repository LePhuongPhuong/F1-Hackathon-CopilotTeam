# FastAPI Backend Dockerfile for Vietnamese Legal AI Chatbot
# Dockerfile cho Backend FastAPI của Chatbot AI Pháp lý Việt Nam

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Install system dependencies for Vietnamese text processing
RUN apt-get update && apt-get install -y \
    # Essential build tools
    build-essential \
    gcc \
    g++ \
    # Git for package installations
    git \
    # Curl for health checks
    curl \
    # Vietnamese font support
    fonts-liberation \
    fonts-dejavu-core \
    # Clean up
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Upgrade pip and install build tools
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/uploads /app/temp

# Copy application code
COPY app/ ./app/
COPY scripts/ ./scripts/

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash vietnamese_legal \
    && chown -R vietnamese_legal:vietnamese_legal /app

# Switch to non-root user
USER vietnamese_legal

# Create additional directories with proper permissions
RUN mkdir -p /app/logs /app/data/temp /app/data/processed /app/data/documents

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
